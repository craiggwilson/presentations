@model AuthorViewModel

<div class="container">
    <div class="content">
        <table class="table table-striped">
            <tr>
                <td><h2>Books by @Model.Author.Name</h2></td>
            </tr>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("View", "Books", new { title = book.Title })">@book.Title</a>
                    </td>
                </tr>
            }
            <tr>
                <th class="header" style="text-align: left"></th>
            </tr>
        </table>
    </div>
</div>